---
import { getTranslator } from "../i18n";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getTranslator(lang as "fr" | "en");
---

<section id="about" class="max-w-3xl mx-auto px-4 py-16 md:py-24 text-center">
  <h2 class="text-white text-4xl md:text-5xl font-bold mb-12 animate-fade-in">
    {t("about.title")}
  </h2>
  <div class="space-y-6">
    <p
      class="text-white/90 text-lg md:text-xl leading-relaxed animate-fade-in [animation-delay:0.2s]"
    >
      {t("about.description")}
    </p>
    <div class="pt-6 animate-fade-in [animation-delay:0.4s]">
      <p class="text-2xl md:text-3xl font-bold text-purple-400 mb-4">
        {t("about.goal.title")}
      </p>
      <p class="text-white/90 text-lg md:text-xl leading-relaxed">
        {t("about.goal.description")}
      </p>
    </div>
  </div>
</section>
