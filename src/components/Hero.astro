---
import { getTranslator } from "../i18n";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getTranslator(lang as "fr" | "en");
---

<section
  id="hero"
  class="min-h-screen flex flex-col items-center justify-center text-white py-8 md:py-12"
>
  <div class="container mx-auto px-4 text-center">
    <img
      src="/images/logo.png"
      alt="Logo Code by Nayru"
      class="w-24 h-24 md:w-32 md:h-32 lg:w-40 lg:h-40 mb-6 md:mb-8 mx-auto"
    />
    <h2
      class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6"
    >
      {t("hero.title")}
    </h2>
    <div class="flex items-center justify-center gap-2 md:gap-4">
      <hr class="w-12 md:w-16 lg:w-20 border-gray-600" />
      <p class="text-lg sm:text-xl md:text-2xl font-light text-gray-300 px-2">
        {t("hero.subtitle")}
      </p>
      <hr class="w-12 md:w-16 lg:w-20 border-gray-600" />
    </div>
  </div>
</section>
