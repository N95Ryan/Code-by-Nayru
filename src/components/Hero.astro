---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Développeur Web Créatif",
  subtitle = "Des solutions web sur mesure pour votre entreprise",
} = Astro.props;
---

<section
  id="hero"
  class="min-h-screen flex items-center justify-center bg-[#101010] text-white pt-20"
>
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      {title}
    </h1>
    <p class="text-xl md:text-2xl text-gray-300 mb-8">
      {subtitle}
    </p>
    <div class="space-x-4">
      <a
        href="#contact"
        class="bg-purple-600 hover:bg-purple-700 text-white px-8 py-3 rounded-lg transition-colors"
      >
        Me contacter
      </a>
      <a
        href="#services"
        class="border border-purple-600 text-purple-600 hover:bg-purple-600 hover:text-white px-8 py-3 rounded-lg transition-colors"
      >
        Voir mes services
      </a>
    </div>
  </div>
</section>
