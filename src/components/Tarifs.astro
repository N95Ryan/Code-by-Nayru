---
interface PricingPlan {
  name: string;
  price: string;
  features: string[];
  isPopular?: boolean;
}

const plans: PricingPlan[] = [
  {
    name: "Basique",
    price: "500€",
    features: [
      "Site vitrine simple",
      "Design responsive",
      "Optimisation SEO basique",
      "1 mois de support",
    ],
  },
  {
    name: "Pro",
    price: "1000€",
    features: [
      "Site web complet",
      "Design personnalisé",
      "Optimisation SEO avancée",
      "3 mois de support",
      "Formation CMS",
    ],
    isPopular: true,
  },
  {
    name: "Entreprise",
    price: "2000€",
    features: [
      "Application web sur mesure",
      "Design premium",
      "SEO complet",
      "6 mois de support",
      "Formation complète",
      "Maintenance mensuelle",
    ],
  },
];
---

<section id="tarifs" class="py-20 text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Mes Tarifs</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        plans.map((plan, index) => (
          <div
            class={`bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 hover:scale-105 transition-all duration-300 animate-fade-in ${
              plan.isPopular ? "border-purple-600" : ""
            }`}
            style={`animation-delay: ${index * 0.1}s`}
          >
            {plan.isPopular && (
              <div class="bg-purple-600 text-white text-sm font-bold px-4 py-1 rounded-full inline-block mb-4">
                Populaire
              </div>
            )}
            <h3 class="text-2xl font-bold mb-4">{plan.name}</h3>
            <div class="text-4xl font-bold mb-6 text-purple-400">
              {plan.price}
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start text-gray-300">
                  <svg
                    class="w-5 h-5 text-purple-600 mr-3 mt-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <a
              href="#contact"
              class={`block w-full text-center py-3 rounded-lg transition-colors ${
                plan.isPopular
                  ? "bg-purple-600 hover:bg-purple-700"
                  : "bg-white/10 hover:bg-white/20"
              }`}
            >
              Choisir ce plan
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
