---
interface Project {
  title: string;
  image: string;
  description: string;
  link: string;
  color: string;
}

const projects: Project[] = [
  {
    title: "Spotr",
    image: "/images/clients/logo_spotr.png",
    description:
      "Application mobile dédiée aux photographes, pour repérer et enregistrer des spots photo à travers le monde.",
    link: "https://apps.apple.com/fr/app/spotr-tous-les-spots-photo/id1151859681",
    color: "#07e7a8",
  },
  {
    title: "Neat • Barber Shop",
    image: "/images/clients/logo_neat.png",
    description:
      "Site vitrine moderne pour le salon de barbier Neat Paris, réalisé sur mesure pour refléter l'univers de la marque.",
    link: "https://neatparis.fr",
    color: "#a3b5c4",
  },
];
---

<section id="projects" class="py-20 text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
      Réalisations
    </h2>

    <div class="grid grid-cols-2 gap-4 sm:gap-6 max-w-4xl mx-auto">
      {
        projects.map((project) => (
          <div
            class="backdrop-blur-sm border border-white/30 rounded-2xl p-4 sm:p-6 hover:scale-105 transition-all duration-300"
            style={`background-color: ${project.color}15`}
          >
            <div class="flex items-center justify-center min-h-[200px] sm:min-h-[300px]">
              <div class="flex flex-col items-center gap-3 sm:gap-4">
                <img
                  src={project.image}
                  alt={`Logo ${project.title}`}
                  class="w-20 h-20 sm:w-32 sm:h-32 object-contain rounded-xl"
                />
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-lg sm:text-xl font-bold text-center hover:text-white/80 transition-colors duration-300"
                >
                  {project.title}
                </a>
                <p class="text-gray-300 text-xs sm:text-sm text-center">
                  {project.description}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
